<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="center_horizontal">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="horizontal">

		<org.sketcher.colorpicker.SatValPicker
			android:id="@+id/satval_picker" android:layout_width="400dp"
			android:layout_height="400dp" />
		<org.sketcher.colorpicker.HuePicker
			android:id="@+id/hue_picker" android:layout_width="60dp"
			android:layout_height="400dp" />
	</LinearLayout>

	<org.sketcher.colorpicker.AlphaPicker
		android:id="@+id/alpha_picker" android:layout_width="fill_parent"
		android:layout_height="40dp" android:layout_marginTop="5dp"
		android:background="@drawable/backrepeat" />

	<org.sketcher.colorpicker.PreviewView
		android:id="@+id/preview_new" android:layout_width="100dp"
		android:layout_height="40dp" android:layout_centerInParent="true"
		android:background="@drawable/backrepeat" android:layout_margin="5dp" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@android:drawable/bottom_bar"
		android:gravity="center_vertical">
		<Button android:id="@+id/picker_button_accept"
			android:layout_weight="1.0" android:layout_width="0dip"
			android:layout_height="wrap_content" android:text="@string/accept" />
		<Button android:id="@+id/picker_button_cancel"
			android:layout_weight="1.0" android:layout_width="0dip"
			android:layout_height="wrap_content" android:text="@string/cancel" />
	</LinearLayout>
</LinearLayout>
